extends ../layout

block content
  h1= title
  p Voici la liste des utilisateurs :

  a(href='/'+collectionName+'s/new') Ajouter un utilisateur
  table(border=1)
    tr
      each col in cols
        th #{col}

    each item in items
      tr
        each col in cols
          td #{item[col]}
        td
          a(href='/'+collectionName+'s/' + item.rowid) Voir
          a(href='/'+collectionName+'s/' + item.rowid + '/edit') Ã‰diter
          a(href='/'+collectionName+'s/' + item.rowid + '?_method=delete') Supprimer
